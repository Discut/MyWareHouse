<Page
    x:Class="MyWareHouse.Views.WarehouseIndexFrame"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MyWareHouse.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    xmlns:viewModels="using:MyWareHouse.ViewModels"
    xmlns:common="using:MyWareHouse.Common"
    mc:Ignorable="d"
    Background="#00000000">

    <Page.Resources>
        <DataTemplate x:Key="ImageTemplate" x:DataType="viewModels:GameBarItem">
            <StackPanel x:Name="TransformeControl">
                <Rectangle Fill="Orange" Height="300" Width="200"/>
            </StackPanel>
        </DataTemplate>
    </Page.Resources>
    <Grid HorizontalAlignment="Stretch">
        <Grid.RowDefinitions>
            <RowDefinition Height="88"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Vertical" Margin="16,40,16,0">
            <TextBlock FontSize="28" Text="主页"></TextBlock>
            <!--<Rectangle Height="1.2" Fill="#000"></Rectangle>-->
        </StackPanel>

        <ScrollViewer Grid.Row="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="88"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="88"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>
                <StackPanel Grid.Row="0" Orientation="Vertical" Margin="16,40,16,0">
                    <TextBlock FontSize="20" Text="最近游玩"></TextBlock>
                    <Rectangle Height="1.2" Fill="#000"></Rectangle>
                </StackPanel>
                <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="12,0,0,0">

                    <GridView
                        IsItemClickEnabled="True"
                        ItemClick="gridViewTransform_ItemClick"
                        x:Name="gridViewTransform"
                        SelectionChanged="GridView_SelectionChanged"
                        ItemTemplate="{StaticResource ImageTemplate}"
                        ItemsSource="{x:Bind gameBarItem}">

                        <GridView.ItemContainerStyle>
                            <Style TargetType="GridViewItem">
                                <Setter Property="Margin" Value="5, 5, 19, 5"/>
                            </Style>
                        </GridView.ItemContainerStyle>

                        <!--An extra property also needs to be added to the GridView's ItemsWrapGrid.
            The following sets the maximum # of items to show before wrapping.-->

                        <GridView.ItemsPanel>
                            <ItemsPanelTemplate>
                                <ItemsWrapGrid x:Name="MaxItemsWrapGrid"
                                   MaximumRowsOrColumns="-1"
                                   Orientation="Horizontal"/>
                            </ItemsPanelTemplate>
                        </GridView.ItemsPanel>
                    </GridView>
                </StackPanel>
                <StackPanel Grid.Row="2" Orientation="Vertical" Margin="16,40,16,0">
                    <TextBlock FontSize="20" Text="所有游戏"></TextBlock>
                    <Rectangle Height="1.2" Fill="#000"></Rectangle>
                </StackPanel>
                <StackPanel Grid.Row="3" Margin="12,0,0,0" HorizontalAlignment="Center">
                    <GridView
                        x:Name="StyledGrid"
                        ItemTemplate="{StaticResource ImageTemplate}"
                        ItemsSource="{x:Bind gameBarItem}">

                        <GridView.ItemContainerStyle>
                            <Style TargetType="GridViewItem">
                                <Setter Property="Margin" Value="5, 5, 24, 5"/>
                            </Style>
                        </GridView.ItemContainerStyle>

                        <!--An extra property also needs to be added to the GridView's ItemsWrapGrid.
            The following sets the maximum # of items to show before wrapping.-->

                        <GridView.ItemsPanel>
                            <ItemsPanelTemplate>
                                <ItemsWrapGrid x:Name="MaxItemsWrapGrid"
                                   Orientation="Horizontal"/>
                            </ItemsPanelTemplate>
                        </GridView.ItemsPanel>
                    </GridView>
                </StackPanel>
            </Grid>
        </ScrollViewer>
    </Grid>
</Page>

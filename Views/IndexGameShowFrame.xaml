<Page
    x:Class="MyWareHouse.Views.IndexGameShowFrame"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MyWareHouse.Views"
    xmlns:viewModels="using:MyWareHouse.ViewModels"
    xmlns:control="using:MyWareHouse.Common"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">


    <Page.Resources>
        <DataTemplate x:Key="ImageTemplate" x:DataType="viewModels:GameBarItem">
            <control:MyUserControl1  Height="300"></control:MyUserControl1>
        </DataTemplate>
    </Page.Resources>
    <Grid SizeChanged="Grid_SizeChanged" >
        <Grid.RowDefinitions>
            <RowDefinition Height="88"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel  Grid.Row="0" Orientation="Vertical" Margin="16,40,16,0">
            <TextBlock FontSize="28" Text="主页"></TextBlock>
            <!--<Rectangle Height="1.2" Fill="#000"></Rectangle>-->
        </StackPanel>
        <GridView HorizontalAlignment="Center" Grid.Row="1" x:Name="GameGridView" Margin="0,0,0,0" ItemTemplate="{StaticResource ImageTemplate}" ItemsSource="{x:Bind indexGameShowFrameViewModel.gameBarItem}">
            <GridView.ItemContainerStyle>
                <Style TargetType="GridViewItem" x:Name="style">
                    <Setter x:Name="setter" Property="Margin" Value="0, 16, 24, 16"/>
                </Style>
                <!--<Style TargetType=""-->
            </GridView.ItemContainerStyle>

             <!--An extra property also needs to be added to the GridView's ItemsWrapGrid.
    The following sets the maximum # of items to show before wrapping.-->
            <GridView.ItemsPanel>
                <ItemsPanelTemplate>
                    <ItemsWrapGrid x:Name="MaxItemsWrapGrid"
                           Orientation="Horizontal"/>
                </ItemsPanelTemplate>
            </GridView.ItemsPanel>
        </GridView>




        <!--<control:MyUserControl1>
            
        </control:MyUserControl1>-->
    </Grid>


</Page>

